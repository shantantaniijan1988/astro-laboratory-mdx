---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h2 class="post-heading">{title}</h2>

<style lang="scss">
  .post-heading {
    padding: 0.5em 1em;
    background-color: #0d6efd;
    color: #fff;
    font-size: 1.25rem;
    font-weight: bold;
    position: relative;

    &::after {
      content: "";
      width: 100%;
      height: 100%;
      border: 2px solid #333;
      position: absolute;
      top: -4px;
      left: -4px;
    }
  }
</style>
